<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ControlActivity"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자세 측정"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:padding="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btn_start_measure_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="측정"
        android:theme="@style/BtnTheme"
        style="@style/Widget.AppCompat.Button.Colored"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front Left"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tv_front_left_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back Left"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tv_back_left_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front Right"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tv_front_right_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back Right"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tv_back_right_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="00"/>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="높이 설정 ( Cm )"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:padding="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front Left"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/et_front_left_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:inputType="number"
                android:hint="Cm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back Left"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:padding="8dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/et_back_left_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:inputType="number"
                android:hint="Cm"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front Right"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/et_front_right_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:inputType="number"
                android:hint="Cm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back Right"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:padding="8dp"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/et_back_right_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:inputType="number"
                android:hint="Cm"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_start_manual_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="시작"
        android:theme="@style/BtnTheme"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
        android:id="@+id/btn_zero_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="복귀"
        android:theme="@style/BtnTheme"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ProgressBar
            android:id="@+id/pgb_setting"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/tv_setup_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>